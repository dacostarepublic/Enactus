<div class="container-fluid">
	<div class="row hidden-md hidden-lg">
		<div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
				<%=form_for(:u, :url=>user_path(@user), :method=>:put) do |f|%>
					<%=f.hidden_field :from, :value=>"first_sign_in"%>
					<div class="well well-sm form-group">
						<h2 style="margin-top:0px;">Personal Details</h2>
						<%=f.text_field :name, :class=>"form-control", :placeholder=>"First name"%>
						<br>
						<%=f.text_field :surname, :class=>"form-control", :placeholder=>"Last name"%>
					</div>
					<div class="well well-sm form-group">
						<h2 style="margin-top:0px;">Residence</h2>
						<%=f.select(:residences_id, @residences,{}, :class=>"form-control")%>
					</div>
					<div class="well well-sm form-group">
						<h2 style="margin-top:0px;">Contact Details</h2>
						<%=f.text_field :contactnumber, :class=>"form-control", :placeholder=>"Cellphone Number"%>
					</div>
					<%=f.submit "Update", :class=>"btn btn-primary btn-block"%>
				<%end%>
				<center><%=link_to "Skip", root_path%></center>
		</div>
	</div>
